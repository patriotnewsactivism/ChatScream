{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": [
    {
      "codebase": "default",
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ],
      "source": "functions"
    },
    {
      "source": "chatscream",
      "codebase": "chatscream",
      "disallowLegacyRuntimeConfig": true,
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint"
      ]
    }
  ],
  "hosting": [
    {
      "target": "production",
      "predeploy": [
        "npm run build"
      ],
      "public": "dist",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "/api/create-checkout-session",
          "function": "createCheckoutSession"
        },
        {
          "source": "/api/create-portal-session",
          "function": "createPortalSession"
        },
        {
          "source": "/api/access/sync",
          "function": "accessSync"
        },
        {
          "source": "/api/access/set-list",
          "function": "accessSetList"
        },
        {
          "source": "/api/oauth/exchange",
          "function": "oauthExchange"
        },
        {
          "source": "/api/oauth/refresh",
          "function": "oauthRefresh"
        },
        {
          "source": "/api/oauth/stream-key",
          "function": "oauthStreamKey"
        },
        {
          "source": "/api/oauth/channels",
          "function": "oauthChannels"
        },
        {
          "source": "/api/stripe-webhook",
          "function": "stripeWebhook"
        },
        {
          "source": "/api/create-scream-donation",
          "function": "createScreamDonation"
        },
        {
          "source": "/api/leaderboard",
          "function": "getLeaderboard"
        },
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    }
  ],
  "apphosting": {
    "backendId": "chatscream",
    "rootDir": ".",
    "ignore": [
      "node_modules",
      ".git",
      "firebase-debug.log",
      "firebase-debug.*.log",
      "functions"
    ]
  },
  "storage": {
    "rules": "storage.rules"
  }
}
