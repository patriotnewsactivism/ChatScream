# =============================================================================
# ChatScream Production Environment Configuration
# =============================================================================
# Copy this file to .env.production and fill in your actual production values
# NEVER commit .env.production to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# Backend API Configuration (Production)
# -----------------------------------------------------------------------------
VITE_API_BASE_URL=https://api.yourdomain.com
VITE_FUNCTIONS_BASE_URL=

# -----------------------------------------------------------------------------
# OAuth Configuration (Production - Public Client IDs)
# -----------------------------------------------------------------------------
VITE_OAUTH_REDIRECT_URI=https://app.yourdomain.com/oauth/callback
VITE_YOUTUBE_CLIENT_ID=
VITE_FACEBOOK_APP_ID=
VITE_TWITCH_CLIENT_ID=

# -----------------------------------------------------------------------------
# Stripe Configuration (PRODUCTION - LIVE MODE)
# Get from: https://dashboard.stripe.com/apikeys (toggle to LIVE mode)
# -----------------------------------------------------------------------------
VITE_STRIPE_PUBLISHABLE_KEY=pk_live_
VITE_STRIPE_PRO_PRICE_ID=price_
VITE_STRIPE_EXPERT_PRICE_ID=price_
VITE_STRIPE_ENTERPRISE_PRICE_ID=price_

# -----------------------------------------------------------------------------
# AI Configuration (Production)
# -----------------------------------------------------------------------------
VITE_CLAUDE_API_KEY=
VITE_GEMINI_API_KEY=

# -----------------------------------------------------------------------------
# Sentry Error Monitoring (Production)
# Get from: https://sentry.io
# -----------------------------------------------------------------------------
VITE_SENTRY_DSN=

# -----------------------------------------------------------------------------
# Application Configuration
# -----------------------------------------------------------------------------
VITE_APP_ENV=production
VITE_DEBUG=false
VITE_APP_VERSION=1.1.0
