#!/usr/bin/env node
import { spawnSync } from 'node:child_process';

const result =
  process.platform === 'win32'
    ? spawnSync(process.env.ComSpec || 'cmd.exe', ['/d', '/s', '/c', 'npm run lint-staged'], {
        stdio: 'inherit',
        windowsHide: true,
      })
    : spawnSync('npm', ['run', 'lint-staged'], {
        stdio: 'inherit',
      });

if (result.error) {
  console.error('pre-commit failed:', result.error.message);
  process.exit(1);
}

process.exit(result.status ?? 1);
