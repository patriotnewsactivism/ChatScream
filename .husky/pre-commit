#!/usr/bin/env node
import { spawnSync } from 'node:child_process';

const result = spawnSync('npm', ['run', 'lint-staged'], {
  stdio: 'inherit',
  shell: process.platform === 'win32',
});

if (result.error) {
  console.error('pre-commit failed:', result.error.message);
  process.exit(1);
}

process.exit(result.status ?? 1);
