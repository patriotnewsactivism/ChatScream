#!/usr/bin/env node
import { spawnSync } from 'node:child_process';
import { fileURLToPath } from 'node:url';

const lintStagedCli = fileURLToPath(
  new URL('../node_modules/lint-staged/bin/lint-staged.js', import.meta.url),
);

const result = spawnSync(process.execPath, [lintStagedCli], {
  stdio: 'inherit',
});

if (result.error) {
  console.error('pre-commit failed:', result.error.message);
  process.exit(1);
}

process.exit(result.status ?? 1);
